{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"Premier League ",
  "description":"Premier League table, fixtures & scores and top scorer information",
  "type":"object",
  "properties": {
    "table":{
      "type":"array",
      "items": {
        "type":"object",
        "properties":{
          "position":{"type":"number"},
          "name":{"type":"string"},
          "logo_url":{"type":"string"},
          "played":{"type":"number"},
          "won":{"type":"number"},
          "drawn":{"type":"number"},
          "lost":{"type":"number"},
          "for":{"type":"number"},
          "against":{"type":"number"},
          "gd":{"type":"number"},
          "points":{"type":"number"},
          "form":{
            "type":"array",
            "items": { "type": "string"}
          }
        }
      }
    },

    "fixtures": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "month": {"type": "string"},
          "year": {"type": "string"},
          "days": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": {"type": "string"},
                "competition": {
                  "type": "object",
                  "properties": {
                    "name": {"type": "string"},
                    "round": {"type": "string"}
                  }
                },
                "matches": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "time": {"type": "string"},
                      "teams": {
                        "type": "object",
                        "properties": {
                          "first": {
                            "type": "object",
                            "properties": {
                              "name": {"type": "string"},
                              "score": {"type": "number"}
                              }
                          },
                          "second": {
                            "type": "object",
                            "properties": {
                              "name": {"type": "string"},
                              "score": {"type": "number"}
                            }
                          }
                        }
                      },
                      "status": {"type": "string"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    },


    "top_scorers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "position":{"type":"number"},
          "name":{"type":"string"},
          "club":{"type":"string"},
          "goals":{"type":"number"},
          "assists":{"type":"number"},
          "played":{"type":"number"},
          "goals_per_90":{"type":"number"},
          "mins_per_goal":{"type":"number"},
          "total_shots":{"type":"number"},
          "goal_conversion":{"type":"string"},
          "shot_accuracy":{"type":"string"}
        }
      }
    }


  }

}